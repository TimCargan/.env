{
  "position": "top",
  "margin-top": 2,
  "margin-left": 10,
  "margin-right": 10,
  "modules-left": ["idle_inhibitor", "cpu", "memory", "custom/gpu-usage"],
  "modules-center": ["hyprland/workspaces"],
  "modules-right": ["network", "pulseaudio", "battery", "clock",  "custom/notification"],

  "idle_inhibitor": {
